[color]
background = #181b20
background-alt = #444
foreground = #c4c7c5
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
waterlight = #20dbfa

[bar/giyu]
;bottom = true

modules-left = bspwm battery wifi
modules-center = date
modules-right = brightness volume cpu ram

background = ${color.background}
foreground = ${color.foreground}

radius-top = 0.0
radius-bottom = 0.0

line-size = 0
line-color = ${color.background}

border-bottom-size = 0
border-bottom-color = ${color.background}

padding = 2
module-margin-left = 1
module-margin-right = 1

;fonts
font-0 = "Iosevka Nerd Font:size=10;4"
font-1 = "Iosevka Nerd Font:size=10;3"

separator = |

[module/date]
type = internal/date

date = %m-%d%
time = %H:%M:%S
format = <label>
label = Today is %date% at %time%

[module/bspwm]
type = internal/bspwm

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-default = 

label-separator = " Â· "
label-focused = %index%
label-focused-foreground = ${color.waterlight}

[module/battery]
type = internal/battery

; typically set to 99, but i want to unplug at 80
full-at = 99

battery = BAT0
adapter = AC

poll-interval = 5

time-format = %H:%M
format-charging = <label-charging>
format-discharging = <label-discharging>

label-charging = Charging %percentage%%
label-discharging = Discharging %percentage%%

[module/wifi]
type = internal/network
interface = wlp0s20f3

interval = 1

format-connected = <ramp-signal> <label-connected>
format-disconnected = <label-disconnected>

label-connected = %essid% %signal%%
label-disconnected = not connected

ramp-signal-0 = :c
ramp-signal-1 = :(
ramp-signal-2 = :l
ramp-signal-3 = :)
ramp-signal-4 = :3
ramp-signal-5 = :D


[module/brightness]
type = internal/backlight

card = intel_backlight
enable-scroll = false;
label = Bright %percentage%%

[module/volume]
type = internal/alsa
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

interval = 5

label-volume = Audio %percentage%%
label-muted = " Muted"

format-muted = <label-muted>
format-volume = <label-volume>

[module/cpu]
type = internal/cpu
label = CPU %percentage%%

[module/ram]
type = internal/memory
label = RAM %percentage_used%%
