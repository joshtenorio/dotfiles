[color]
background = #212B30
foreground = #C4C7C5
sep = #3F5360

white = #FFFFFF
black = #000000
red = #EC7875
pink = #EC407A
purple = #BA68C8
blue = #42A5F5
cyan = #4DD0E1
teal = #00B19F
indigo = #6C77BB
gray = #9E9E9E
blue-gray = #6D8895


[bar/basebar]
modules-center = date
modules-right = wifi sep volume sep battery
modules-left = title

background = ${color.background}
foreground = ${color.foreground}

radius-top = 0.0
radius-bottom = 0.0

line-size = 0
line-color = ${color.background}

border-bottom-size = 0
border-bottom-color = ${color.background}

padding = 2
module-margin-left = 1
module-margin-right = 1

font-0 = "Iosevka Nerd Font:size=10;4"
font-1 = "Iosevka Nerd Font:size=10;3"
font-2 = "feather:size=12;3"

separator = 

dim-value = 1.0

;todo: figure out what to do with systray


[module/sep]
type = custom/text
content = " | "


[module/date]
type = internal/date
date = %Y-%m-%d%
time = %H:%M:%S

format = <label>
label = Today is %date% at %time%


[module/battery]
type = internal/battery

; this is set at 80 bc i want to unplug when battery
; is at least 80%, typically full-at is set to 99
full-at = 80

battery = BAT0
adapter = AC

poll-interval = 5

time-format = %H:%M

format-charging = <label-charging>

format-discharging = <label-discharging>

label-charging = Charging %percentage%%

label-discharging = Discharging %percentage%%

label-full = At least 80 reached


[module/wifi]
type = internal/network
interface = wlp0s20f3

interval = 1

format-connected = <ramp-signal> <label-connected>
format-disconnected = <label-disconnected>

label-connected = %essid% %signal%%

label-disconnected = not connected

ramp-signal-0 = :c
ramp-signal-1 = :(
ramp-signal-2 = :l
ramp-signal-3 = :)
ramp-signal-4 = :3
ramp-signal-5 = :D


[module/title]
type = internal/xwindow

format = <label>

label = %title%

label-empty = Desktop


[module/volume]
type = internal/alsa

master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

interval = 5

label-volume = Audio %percentage%%
label-muted = " Muted"

