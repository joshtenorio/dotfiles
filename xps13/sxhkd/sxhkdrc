# to spawn terminal
ctrl + alt + t
	alacritty

# to reload config file
alt + Escape
	pkill -USR1 -x sxhkd

# quit/restart bspwm
alt + shift + {q,r}
	bspc {quit,wm -r}

# sleep
alt + shift + s
	systemctl suspend

# open ranger
super + f
	alacritty -e ranger

# start google chrome
super + g
	google-chrome

# close window
alt + f4
	bspc node -k
# switch to previous window in workspace
alt + Tab
	bspc node -f last.local

# adjust brightness
super + shift + {9,0}
	brightnessctl set 5%{-,+}

# adjust audio
super + {9,0}
	amixer -q set Master 5%{-,+}

# change bspwm workspace
super + {1,2,3,4,5,6,7}
	bspc desktop -f ^{1,2,3,4,5,6,7}

# go to last-viewed bspwm workspace
super + Tab
	bspc desktop -f last

# move focused window to workspace #
super + shift + {1,2,3,4,5,6,7}
	bspc node -d ^{1,2,3,4,5,6,7}
