[module/bspwm]
type = internal/bspwm

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-default = 

label-separator = " Â· "
label-focused = %index%
label-focused-foreground = ${color.white}


[module/polywins]
type = custom/script
exec = ~/.config/polybar/scripts/polywins.sh 2>/dev/null
format = <label>
label = %output%
label-padding = 1
tail = true
interval = 0.5

[module/date]
type = internal/date
date = %Y-%m-%d%
time = %H:%M:%S

format = <label>
label = Today is %date% at %time%


[module/battery]
type = internal/battery

; this is set at 80 bc i want to unplug when battery
; is at least 80%, typically full-at is set to 99
full-at = 80

battery = BAT0
adapter = AC

poll-interval = 5

time-format = %H:%M

format-charging = <label-charging>

format-discharging = <label-discharging>

label-charging = Charging %percentage%%

label-discharging = Discharging %percentage%%

label-full = At least 80 reached


[module/wifi]
type = internal/network
interface = wlp0s20f3

interval = 1

format-connected = <ramp-signal> <label-connected>
format-disconnected = <label-disconnected>

label-connected = %essid% %signal%%

label-disconnected = not connected

ramp-signal-0 = :c
ramp-signal-1 = :(
ramp-signal-2 = :l
ramp-signal-3 = :)
ramp-signal-4 = :3
ramp-signal-5 = :D


[module/brightness]
type = internal/backlight

card = intel_backlight
;output = eDP-1

enable-scroll = false;
format = <label>
label = Bright %percentage%%


[module/title]
type = internal/xwindow

format = <label>

label = %title%

label-empty = Desktop


[module/volume]
type = internal/alsa

master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

interval = 5

label-volume = Audio %percentage%%
label-muted = " Muted"

